{
  "name": "a",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build --filter=web",
    "build:fast": "turbo build:fast --filter=web",
    "dev:web": "turbo dev --filter=web",
    "build:web": "turbo build --filter=web",
    "start:web": "turbo start --filter=web",
    "deploy:web": "pnpm --filter web deploy",
    "deploy:stage-web": "pnpm --filter web deploy:stage",
    "typecheck": "turbo typecheck",
    "lint": "pnpm lint:pkg && pnpm lint:web",
    "lint:pkg": "eslint -c .eslintrc.json ./packages/**/**/*.{ts,tsx}",
    "lint:web": "eslint -c .eslintrc.json ./apps/web/**/*.{ts,tsx}",
    "lint:fix": "eslint --fix -c .eslintrc.json ./packages/**/**/*.{ts,tsx}",
    "lint:web-fix": "eslint --fix -c .eslintrc.json ./apps/web/**/*.{ts,tsx}",
    "check:rap": "tsx scripts/check-rap-updates.ts",
    "format:check": "prettier --check packages/**/**/src --cache",
    "format:write": "prettier --write packages/**/**/src --cache",
    "turbo:clean": "turbo clean && rimraf ./node_modules/.cache/turbo",
    "turbo:graph": "pnpm build --graph=dependency-graph.png",
    "clean": "pnpm turbo:clean && pnpm clean:jest && pnpm clean:node-modules && pnpm clean:lock && pnpm install --hoist",
    "clean:node-modules": "rimraf ./apps/**/node_modules && rimraf ./packages/**/**/node_modules && rimraf ./node_modules",
    "clean:lock": "rimraf ./pnpm-lock.yaml",
    "create:cmp": "plop component",
    "create:pkg": "plop package",
    "create:hook": "plop hook"
  },
  "devDependencies": {
    "@w/eslint-config": "workspace:*",
    "@w/ui": "workspace:*",
    "@w/typescript-config": "workspace:*",
    "@types/glob": "^8.1.0",
    "@commitlint/config-conventional": "^17.2.0",
    "glob": "^10.3.10",
    "npm-check-updates": "^16.14.17",
    "plop": "^4.0.1",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
