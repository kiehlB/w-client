{
  "name": "client",
  "private": true,
  "scripts": {
    "dev": "pnpm dev:coderang",
    "build": "turbo build",
    "dev:coderang": "turbo dev --filter=coderang",
    "build:coderang": "turbo build --filter=coderang",
    "start:coderang": "turbo start --filter=coderang",
    "deploy:coderang": "pnpm --filter coderang deploy",
    "deploy:stage-coderang": "pnpm --filter coderang deploy:stage",
    "test": "turbo run test",
    "typecheck": "turbo typecheck",
    "lint": "pnpm lint:coderang",
    "lint:coderang": "eslint -c .eslintrc.json ./apps/coderang/**/*.{ts,tsx}",
    "lint:fix": "eslint --fix -c .eslintrc.json ./apps/coderang/**/*.{ts,tsx}",
    "check:rap": "tsx scripts/check-rap-updates.ts",
    "fix:rap": "tsx scripts/fix-rap.ts",
    "format:check": "prettier --check apps/coderang/src --cache",
    "format:write": "prettier --write apps/coderang/src --cache",
    "turbo:clean": "turbo clean && rimraf ./node_modules/.cache/turbo",
    "turbo:graph": "pnpm build --graph=dependency-graph.png",
    "clean": "pnpm turbo:clean && pnpm clean:jest && pnpm clean:node-modules && pnpm clean:lock && pnpm install --hoist",
    "clean:node-modules": "rimraf ./apps/coderang/node_modules && rimraf ./node_modules",
    "clean:changelogs": "rimraf ./apps/coderang/CHANGELOG.md",
    "clean:lock": "rimraf ./pnpm-lock.yaml",
    "clean:jest": "jest --clearCache",
    "create:cmp": "plop component",
    "create:pkg": "plop package",
    "create:hook": "plop hook",
    "version": "changeset version",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --snapshot --no-git-tag --tag canary",
    "postinstall": "husky install && pnpm build:coderang"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@w/eslint-config": "workspace:*",
    "@w/typescript-config": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "commitlint-plugin-function-rules": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "tsx": "^4.11.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
